# Database Configuration
DATABASE_URL=postgresql://scanner_user:scanner_pass@localhost:5432/file_scanner
DATABASE_POOL_MIN_SIZE=10
DATABASE_POOL_MAX_SIZE=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# File Storage Configuration
FILE_STORAGE_PATH=/data/files
MAX_FILE_SIZE_MB=100
STORAGE_WARNING_THRESHOLD=85
STORAGE_CRITICAL_THRESHOLD=90
STORAGE_EMERGENCY_THRESHOLD=95

# Cache Configuration
JOB_CACHE_TTL=3600
FILE_CACHE_TTL=86400

# Queue Configuration
REDIS_STREAM_NAME=scan_jobs
REDIS_CONSUMER_GROUP=scanner_workers

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
MAX_UPLOAD_SIZE=104857600

# Cleanup Configuration
FILE_RETENTION_DAYS=7
CLEANUP_SCHEDULE_CRON=0 2 * * *
